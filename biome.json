{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "single",
			"indentWidth": 2,
			"lineEnding": "lf"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentWidth": 2,
			"trailingCommas": "none",
			"lineEnding": "lf",
			"semicolons": "asNeeded"
		}
	},
	"overrides": [
		{
			"include": ["*.astro"],
			"formatter": {
				"indentWidth": 2
			}
		}
	]
}
